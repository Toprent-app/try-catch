{
  "name": "@power-rent/try-catch",
  "version": "0.0.2",
  "description": "A TypeScript utility for simplified async error handling with Sentry integration",
  "main": "dist/nextjs/index.js",
  "module": "dist/nextjs/esm/index.js",
  "types": "dist/nextjs/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./nextjs": {
      "types": "./dist/nextjs/index.d.ts",
      "require": "./dist/nextjs/index.js",
      "import": "./dist/esm/nextjs/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test:run"
  },
  "keywords": [
    "typescript",
    "error-handling",
    "async",
    "sentry",
    "try-catch",
    "error-reporting"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/power-rent/try-catch.git"
  },
  "bugs": {
    "url": "https://github.com/power-rent/try-catch/issues"
  },
  "homepage": "https://github.com/power-rent/try-catch#readme",
  "peerDependencies": {
    "@sentry/nextjs": "8.55.0"
  },
  "peerDependenciesMeta": {
    "@sentry/nextjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^22.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  }
}
